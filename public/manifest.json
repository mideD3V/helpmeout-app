
{
  "manifest_version": 3,

  "name": "Help Me Screen Record", 
  "description": "HelpMeOut: A Screen recording app for chrome users. Helps to record screens and save it for later use",
  "version": "1.0.0.1",
  "icons":{
    "28": "logo-icon28.png"
  },

  "action":{
    "default_popup": "index.html",
  "default_title": "Help Me Record"

  },
  "permissions":[
    "scripting",
    "tabs",
    "activeTab"
  ],

  "host_permissions":[
    "https://*/*",
    "http://*/"
  ]


}